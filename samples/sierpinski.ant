paint @ 1
i := 0
left := 1
right := -1
back := 2
while 1==1 do
  for j in 1:1:i do
    value := 0
    turn @ back
    move @ 1
    for k in 1:1:2 do
      turn @ right
      move @ 1
      pick @ bit
      value := value+bit
    end
    turn @ right
    move @ 1
    turn @ left
    if value==2 then
      value := 0
    end
    paint @ value
    move @ 1
  end
  turn @ right
  move @ 1
  turn @ right
  move @ i
  turn @ back
  i := i+1
end
